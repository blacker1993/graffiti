{
  "compilerOptions": {
    "noImplicitAny": false,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "strictBindCallApply": true,
    "strictNullChecks": false,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": false,
    "lib": ["es2018", "dom"],
    "target": "es2018",
    "module": "commonjs",
    "esModuleInterop": true,
    "jsx": "react",
    "skipLibCheck": true,
    "outDir": "lib"
  },
  "include": ["src"]
}
